{
    "compilerOptions": {
        "target": "ES2015",
        "declaration": false,
        "outDir": "lib",
        "strict": true,
        "removeComments": true,
        "allowJs": true,
        "baseUrl": "src",
        "paths": {
            "styles/*": ["styles/*"],
            "components/*": ["components/*"],
            "actions/*": ["redux-files/actions/*"],
            "reducers/*": ["redux-files/reducers/*"],
            "actionTypes": ["redux-files/actionTypes.js"],
            "selectors": ["redux-files/selectors.js"],
            "utils": ["utils.js"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
